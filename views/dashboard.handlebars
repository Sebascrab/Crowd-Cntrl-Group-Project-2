<div class="hero is-fullheight">

    <div class="column">
        <table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth ">
            <h1 class="title has-shadow is-size-2">CLIENT LIST</h1>
            <a id="addButton" class="button is-pulled-right mr-6 mb-3 is-success" href="/addclient">Add Customer</a>

            <thead>
                <tr>
                    <th>#</th>
                    <th>Customer Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Action</th>
                </tr>
            <tbody>
                {{#each clients as |client|}}
                <tr>
                    <th id="{{client.id}}">{{client.id}}</th>
                    <td id="clientName">{{client.customer_name}}</td>
                    <td id="clientPhoneNumber">{{client.phone_number}}</td>
                    <td id="clientEmailAddress">{{client.email_address}}</td>
                    <td>
                        <a id="editButton" href="#" type="button" class="button is-light is-small is-info">Edit<i
                                class="fa-solid fa-file-pen pl-1"></i>
                            </a>
                      
                        <a id="deleteButton" href="#" type="button" class="button is-light is-small is-danger">Delete<i
                                class="fa-solid fa-trash pl-1"></i>
                            </a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
            </thead>
        </table>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="/js/dashboard.js"></script>